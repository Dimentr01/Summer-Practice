<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context="com.example.user.myapplication.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Levels!"
        android:textSize="63dp"
        android:textColor="#FE642E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lvl4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="37dp"
        android:background="#FE2EF7"
        android:text="4" />

    <Button
        android:id="@+id/lvl1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lvl4"
        android:layout_marginTop="103dp"
        android:background="#00BFFF"
        android:text="1" />

    <Button
        android:id="@+id/lvl2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/lvl1"
        android:layout_centerHorizontal="true"
        android:background="#58FAD0"
        android:text="2" />

    <Button
        android:id="@+id/lvl5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="#DF0174"
        android:text="5" />

    <Button
        android:id="@+id/lvl3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lvl1"
        android:layout_marginEnd="36dp"
        android:background="#088A68"
        android:text="3" />

    <Button
        android:id="@+id/lvl6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/lvl3"
        android:layout_centerVertical="true"
        android:background="#4000FF"
        android:text="6" />

    <Button
        android:id="@+id/lvl7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lvl4"
        android:layout_marginBottom="98dp"
        android:background="#D7DF01"
        android:text="7" />

    <Button
        android:id="@+id/lvl8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/lvl7"
        android:layout_centerHorizontal="true"
        android:background="#5FB404"
        android:text="8" />

    <Button
        android:id="@+id/lvl9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/lvl3"
        android:layout_alignTop="@+id/lvl7"
        android:background="#0A1B2A"
        android:text="9"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
